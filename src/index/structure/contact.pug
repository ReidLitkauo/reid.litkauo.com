h3 Contact Me!

form(method='POST' action='/send-contact-email' data-hook-before-submit='contact_beforeSubmit' data-hook-success='contact_success' data-hook-error='contact_error')
	
	.success
		span
			p Message sent!
			p I&#x2019;ll be in touch soon!
	
	.fields
	
		- $names =  ['N. K. Jemisin'];
		- $emails = ['nice.client@example.com'];
		
		label.name
			span Name
			input(type='text' name='name' placeholder=$names[mt_rand(0, count($names) - 1)])

		label.email
			span Email
			input(type='email' name='email' placeholder=$emails[mt_rand(0, count($names) - 1)])
		
		textarea(name='message' placeholder='What can I help you with?')
		
		label.captcha
			div
				span Generating captcha...
			input(type='text' name='captcha_response' placeholder='Type your answer here...')
		
		-# I will poll /captcha/generate for a captcha, and place it into hidden
		-# inputs that look like this:
		-# input(type='hidden' name='captcha_token[]' value='some_md5_string')
		
		button.cta(type='submit')
			.default Send Email
			img.loading(src='/assets/loading.io/Spin-1s-200px.svg' alt='Loading icon')
			.error An error occurred, please try again.

